{
  "extends": [
    "@gitlab/stylelint-config"
  ],
  "plugins": [
    "./stylelint/no_gl_media_breakpoint_down.js",
    "./stylelint/no_gl_depreacted_design_tokens.js"
  ],
  "rules": {
    "@gitlab/no-gl-media-breakpoint-down": true,
    "@gitlab/no-gl-deprecated-design-tokens": true,
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["tailwind", "apply"]
      }
    ]
  }
}
